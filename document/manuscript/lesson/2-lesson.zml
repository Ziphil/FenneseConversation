\lesson|id="2"|<
  \title<私のお父さんは教師です。>
  \subtitle<Це̄ лехо̄к е̄к чӣҕҕас.>

  \goal<
    \li<名詞の定性について学びましょう。>
    \li<人称形容詞や指示形容詞を覚えましょう。>
  >

  \sit<
    カオルがフィーナの本に紙が挟まっていることに気づきます。
  >

  \shconv<
    \li<
      \name<{ʻКаолу}>
      \sen<
        \wd<\sh<{Фӣна}>\pr<フィーナ>>[,]
        \wd<\sh<{анние}>\pr<アンニイェ>>
        \wd<\sh<{е̄к}>\pr<エーク>>
        \wd<\sh<{се̄}>\pr<セー>>
        \wd<\sh<{левде̄сак}>\pr<レヴデーサク>>[?]
      >
    >
    \li<
      \name<{ʻФӣна}>
      \sen<
        \wd<\sh<{А̄}>\pr<アー>>[,]
        \wd<\sh<{е̄ко}>\pr<エーコ>>
        \wd<\sh<{вено̄ццо}>\pr<ヴェノーッツォ>>[.]
      >
    >
    \li<
      \name<{ʻКаолу}>
      \sen<
        \wd<\sh<{Анна}>\pr<アンナ>>
        \wd<\sh<{ше̄}>\pr<シェー>>
        \wd<\sh<{лошетво̄до}>\pr<ロシェトヴォード>>[?]
      >
    >
    \li<
      \name<{ʻФӣна}>
      \sen<
        \wd<\sh<{Ич}>\pr<イチ>>[.]
        \wd<\sh<{Ие}>\pr<イイェ>>
        \wd<\sh<{е̄к}>\pr<エーク>>
        \wd<\sh<{це̄}>\pr<ツェー>>
        \wd<\sh<{хо̄к}>\pr<ホーク>>
        \wd<\sh<{и}>\pr<イ>>
        \wd<\sh<{цо̄}>\pr<ツォー>>
        \wd<\sh<{хо̄ко}>\pr<ホーコ>>[.]
        \wd<\sh<{Це̄}>\pr<ツェー>>
        \wd<\sh<{лехо̄к}>\pr<レホーク>>
        \wd<\sh<{е̄к}>\pr<エーク>>
        \wd<\sh<{чӣҕҕас}>\pr<チーッガス>>[,]
        \wd<\sh<{и}>\pr<イ>>
        \wd<\sh<{цо̄}>\pr<ツォー>>
        \wd<\sh<{лехо̄ко}>\pr<レホーコ>>
        \wd<\sh<{е̄ко}>\pr<エーコ>>
        \wd<\sh<{аффӣхто}>\pr<アッフィーフト>>[.]
      >
    >
    \li<
      \name<{ʻКаолу}>
      \sen<
        \wd<\sh<{Гоге̄на}>\pr<ゴゲーナ>>[!]
        \wd<\sh<{И}>\pr<イ>>
        \wd<\sh<{сие}>\pr<スィイェ>>
        \wd<\sh<{е̄к}>\pr<エーク>>
        \wd<\sh<{анна}>\pr<アンナ>>
        \wd<\sh<{ше̄}>\pr<シェー>>
        \wd<\sh<{ботте̄ч}>\pr<ボッテーチ>>[?]
      >
    >
    \li<
      \name<{ʻФӣна}>
      \sen<
        \wd<\sh<{Ич}>\pr<イチ>>[,]
        \wd<\sh<{леботте̄ч}>\pr<レボッテーチ>>
        \wd<\sh<{е̄к}>\pr<エーク>>
        \wd<\sh<{то̄сремоҕе̄фе}>\pr<トースレモゲーフェ>>[.]
      >
    >
  >

  \jaconv<
    \li<
      \name<カオル>
      \sen<フィーナ、その紙は何?>
    >
    \li<
      \name<フィーナ>
      \sen<ああ、写真だよ。>
    >
    \li<
      \name<カオル>
      \sen<君の家族?>
    >
    \li<
      \name<フィーナ>
      \sen<そう。これは私のお父さんと私のお母さん。私のお父さんは教師で、私のお母さんは歌手なんだ。>
    >
    \li<
      \name<カオル>
      \sen<すごいね! それで、それは君の弟?>
    >
    \li<
      \name<フィーナ>
      \sen<うん、弟は高校生。>
    >

  >

  \wordl<
    \li<\sh<{анние}>\eql<\li<\cat<名>\ja<何, 誰>>>>
    \li<\sh<{се̄}>\eql<\li<\cat<形>\ja<その>>>>
    \li<\sh<{веде̄сак}>\shc<({левде̄сак})>\eql<\li<\cat<名>\cls<赤>\ja<紙>>>>
    \li<\sh<{вено̄ццо}>\eql<\li<\cat<名>\cls<青>\ja<写真>>>>
    \li<\sh<{ше̄}>\eql<\li<\cat<形>\ja<あなたの>>>>
    \li<\sh<{шетво̄до}>\shc<({лошетво̄до})>\eql<\li<\cat<名>\cls<赤>\ja<家族>>>>
    \li<\sh<{це̄}>\shc<({цо̄})>\eql<\li<\cat<形>\ja<私の>>>>
    \li<\sh<{хо̄к}>\shc<({хо̄ко})>\eql<\li<\cat<名>\cls<両>\ja<親>>>>
    \li<\sh<{чӣҕҕас}>\eql<\li<\cat<名>\cls<両>\ja<教師>>>>
    \li<\sh<{аффӣхат}>\shc<({аффӣхто})>\eql<\li<\cat<名>\cls<両>\ja<歌手>>>>
    \li<\sh<{гоге̄на}>\eql<\li<\cat<形>\ja<偉大な>>>>
    \li<\sh<{сие}>\eql<\li<\cat<名>\ja<それ>>>>
    \li<\sh<{ботте̄ч}>\shc<({леботте̄ч})>\eql<\li<\cat<名>\cls<両>\ja<弟, 妹>>>>
    \li<\sh<{то̄сремоҕе̄фе}>\eql<\li<\cat<名>\cls<両>\ja<高校生>>>>
  >


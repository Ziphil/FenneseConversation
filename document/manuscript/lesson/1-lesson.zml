\lesson|id="1"|<
  \title<私は学生です。>
  \subtitle<Ӣк тӣал.>

  \goal<
    \li<名詞の類について学びましょう。>
    \li<「/A/ は /B/ です」という表現を覚えましょう。>
  >

  \sit<
    フェンナ語圏の大学に入学したカオルが、構内でフィーナに話しかけます。
  >

  \shconv<
    \li<
      \name<{ʻКаолу}>
      \sen<
        \wd<\sh<{Ӣрфа}>\pr<イールファ>>[,]
        \wd<\sh<{анно̄к}>\pr<アンノーク>>
        \wd<\sh<{сӣк}>\pr<スィーク>>
        \wd<\sh<{сашше}>\pr<サッシェ>>
        \wd<\sh<{тӣал}>\pr<ティーヤル>>[?]
      >
    >
    \li<
      \name<{ʻФӣна}>
      \sen<
        \wd<\sh<{Ӣрфа}>\pr<イールファ>>[.]
        \wd<\sh<{Ич}>\pr<イチ>>[,]
        \wd<\sh<{ӣк}>\pr<イーク>>
        \wd<\sh<{тӣал}>\pr<ティーヤル>>[.]
      >
    >
    \li<
      \name<{ʻКаолу}>
      \sen<
        \wd<\sh<{Бов}>\pr<ボヴ>>
        \wd<\sh<{иццо}>\pr<イッツォ>>
        \wd<\sh<{ӣко}>\pr<イーコ>>
        \wd<\sh<{тӣало}>\pr<ティーヤロ>>[,]
        \wd<\sh<{и}>\pr<イ>>
        \wd<\sh<{ӣко}>\pr<イーコ>>
        [ʻ]\wd<\sh<{каолу}>\pr<カオル>>[.]
      >
    >
    \li<
      \name<{ʻФӣна}>
      \sen<
        \wd<\sh<{Ицце}>\pr<イッツェ>>
        \wd<\sh<{ӣк}>\pr<イーク>>
        [ʻ]\wd<\sh<{фӣна}>\pr<フィーナ>>[.]
        \wd<\sh<{Шетларсе̄}>\pr<シェトラルセー>>[.]
      >
    >
    \li<
      \name<{ʻКаолу}>
      \sen<
        \wd<\sh<{Анно̄к}>\pr<アンノーク>>
        \wd<\sh<{е̄ко}>\pr<エーコ>>
        \wd<\sh<{ио}>\pr<イヨ>>
        \wd<\sh<{тӯало}>\pr<トゥーウァロ>>[?]
      >
    >
    \li<
      \name<{ʻФӣна}>
      \sen<
        \wd<\sh<{Жоч}>\pr<ジョチ>>[,]
        \wd<\sh<{е̄к}>\pr<エーク>>
        \wd<\sh<{вече̄ҕас}>\pr<ヴェチェーガス>>[.]
      >
    >
  >

  \jaconv<
    \li<
      \name<カオル>
      \sen<こんにちは、あなたは学生ですか?>
    >
    \li<
      \name<フィーナ>
      \sen<こんにちは。はい、私は学生です。>
    >
    \li<
      \name<カオル>
      \sen<私も学生で、カオルと言います。>
    >
    \li<
      \name<フィーナ>
      \sen<私はフィーナです。よろしくね。>
    >
    \li<
      \name<カオル>
      \sen<これは教科書?>
    >
    \li<
      \name<フィーナ>
      \sen<いや、小説だよ。>
    >

  >

